upstream booking-asmo-su {
    server localhost:8538 max_fails=5 fail_timeout=60s;
}

# for serving correct path to files from drf filefield
proxy_set_header Host booking.asmo.su;
proxy_set_header X-forwarded-for $proxy_add_x_forwarded_for;

server {
    gzip on;
    gzip_disable "msie6";
    gzip_min_length 1000;

    server_name booking.asmo.su www.booking.asmo.su;
    
    # security
    add_header Referrer-Policy "strict-origin";
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header Strict-Transport-Security 'max-age=31536000; includeSubDomains; preload';

    location / {
        proxy_pass http://booking-asmo-su/;
        # proxy_set_header Host $host;
        # proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        # proxy_set_header X-Forwarded-Proto $scheme;
        # proxy_set_header X-Real-IP $remote_addr;

        try_files $uri $uri/ /index.html;
    }
}
